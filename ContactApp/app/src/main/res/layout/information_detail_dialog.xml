<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="13dp"
    android:id="@+id/cardView"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/fbColor"
            android:id="@+id/colorLogos">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/facebooklogo"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/logos"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:id="@+id/conUsername">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook :"
                    android:id="@+id/txtUsername"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@+id/username"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/txtUsername"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:id="@+id/conAdditional">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook Url :"
                    android:id="@+id/txtaddiontal"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@+id/additional"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/txtaddiontal"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:autoLink="web"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:id="@+id/conEmail">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook Email :"
                    android:id="@+id/txtemail"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@+id/email"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/txtemail"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="visible"
                android:id="@+id/conQrCode">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code :"
                    android:id="@+id/txtCode"
                    android:textColor="@color/colorTitle"
                    android:textSize="20dp"/>

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/code"
                    android:layout_below="@+id/txtCode"
                    android:layout_marginLeft="16dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_qrcode"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:text="Okay"
            android:background="@color/fbColor"
            android:textColor="@color/white"
            android:id="@+id/okBtn"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>