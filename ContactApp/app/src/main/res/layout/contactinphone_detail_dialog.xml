<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="13dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/container">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:id="@+id/cover"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="160dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/cloud"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="163dp"
                        android:id="@+id/ContactPhoto"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello Hello"
                        android:layout_below="@+id/cover"
                        android:layout_marginTop="41dp"
                        android:layout_marginBottom="30dp"
                        android:textSize="18dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/ContactName"
                        android:textColor="@color/iconBlack"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/phone"
                        android:layout_below="@+id/ContactName"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/phone"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:layout_toRightOf="@+id/phone"
                        android:layout_below="@+id/ContactName"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/num"
                        android:textColor="#98999c"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+855 010 43 50 42"
                        android:layout_toRightOf="@+id/phone"
                        android:layout_below="@+id/num"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:textSize="17dp"
                        android:textColor="@color/iconBlack"
                        android:id="@+id/phoneNumber"
                        android:singleLine="false"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="36dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/message"
                            android:id="@+id/Messagebtn"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textColor="@color/mainColor"
                            android:layout_below="@+id/Messagebtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/phone_call"
                            android:id="@+id/phoneCallbtn"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:textColor="@color/mainColor"
                            android:layout_below="@+id/phoneCallbtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"

                            />
                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainColor"
                    android:layout_margin="30dp"
                    android:background="@drawable/dialog_button_ok"
                    android:text="Ok"
                    android:id="@+id/okBtn"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.v7.widget.CardView>