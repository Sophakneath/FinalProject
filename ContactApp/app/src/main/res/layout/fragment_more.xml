<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoreFragment"
    android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/mainColor">
                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:elevation="20dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:id="@+id/profileInfo">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Developer"
                                android:id="@+id/about"
                                android:textColor="@color/colorTitle"
                                android:textSize="16dp"
                                android:layout_centerHorizontal="true"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="7dp"
                                android:src="@drawable/cover"
                                android:id="@+id/profile"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/about"
                                android:layout_marginTop="16dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/profile"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Developer : Lengry Sophakneath"
                                    android:id="@+id/username"
                                    android:textSize="16dp"
                                    android:textColor="@color/colorTitle"
                                    android:layout_marginTop="16dp"
                                    android:layout_centerHorizontal="true"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact : 010 43 50 42"
                                    android:textSize="16dp"
                                    android:id="@+id/userPhoneNum"
                                    android:textColor="@color/colorTitle"
                                    android:layout_below="@+id/username"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email : pheakneath8@gmail.com"
                                    android:textSize="16dp"
                                    android:id="@+id/email"
                                    android:textColor="@color/colorTitle"
                                    android:layout_below="@+id/userPhoneNum"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    />
                            </RelativeLayout>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/share">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/shareabout"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:text="Share App"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="16dp"
                            android:textColor="@color/colorTitle"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rate">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/stars"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:text="Rate App"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="16dp"
                            android:textColor="@color/colorTitle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/privacy">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/locker"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white"
                            android:text="Privacy Policy"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="16dp"
                            android:textColor="@color/colorTitle"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

</ScrollView>